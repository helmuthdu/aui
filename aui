    "b")
      break
      ;;
    *)
      invalid_option
      install_desktop_environment
      ;;
  esac
  #MTP SUPPORT {{{
  if is_package_installed "libmtp" ; then
    [[ ${KDE} -eq 1 ]] && package_install "kio-mtp" || package_install "gvfs-mtp"
  fi
  #}}}
  #Fix p7FM {{{
  [[ ${KDE} -eq 0 ]] && package_install "wxgtk2.8"
  #}}}
}
