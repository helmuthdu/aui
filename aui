                ;;
            13)
                aur_package_install "teamspeak3"
                ;;
            14)
                aur_package_install "teamviewer"
                ;;
            15)
                if [[ $KDE -eq 1 ]]; then
                    package_install "transmission-qt"
                else
                    package_install "transmission-gtk"
                fi
                ;;
            16)
                if [[ $KDE -eq 1 ]]; then
                    package_install "konversation"
                else
                    package_install "xchat"
                fi
                ;;
            "b")
                break
                ;;
            *)
                invalid_option
                ;;
        esac
    done
elihw
done
